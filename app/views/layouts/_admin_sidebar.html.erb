      </li>
      <li class="<%= is_active("admin/users") %>">
        <%= link_to admin_users_path do %>
          <i class="glyphicon glyphicon-user"></i>
          <p><%= t "user" %></p>
        <% end %>
      </li>
      <li class="<%= is_active("admin/requests") %>">
        <%= link_to admin_requests_path do %>
          <i class="glyphicon glyphicon-send"></i>
          <p><%= t "request" %></p>
