      <li class="<%= is_active("admin/books") %>">
        <%= link_to admin_books_path do %>
          <i class="glyphicon glyphicon-book"></i>
          <p><%= t "book" %></p>
        <% end %>
      </li>
      <li class="<%= is_active("admin/authors") %>">
        <%= link_to admin_authors_path do %>
          <i class="glyphicon glyphicon-print"></i>
          <p><%= t "author" %></p>
