wb = xlsx_package.workbook
wb.styles do |style|
  header = style.add_style bg_color: "EFC376", alignment: {horizontal: :center,
    vertical: :center}, sz: 12
  wb.add_worksheet(name: "Categories") do |sheet|
    sheet.add_row ["ID", "Category name"], style: [header, header]
    @categories.each do |category|
      sheet.add_row [category.id, category.name]
    end
  end
end
