<div class="col-sm-12 menu-account">
  <% if logged_in? %>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <ul>
            <li><%= image_tag(Settings.logo, alt: t("logo")) %></li>
            <li><%= @current_user.name %> <b class="caret"></b></li>
          </ul>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to t("profile"), current_user %></li>
          <li><%= link_to t("settings"), "#" %></li>
          <li class="divider"></li>
          <li>
            <%= link_to t(logout), logout_path, method: "delete" %>
          </li>
        </ul>
      </li>
    </ul>
  <% else %>
    <ul>
      <li><%= link_to t("signup"), signup_path, remote: true %></li>
      <li><%= link_to t("login"), login_path, remote: true %></li>
    </ul>
  <% end %>
</div>
<div class="col-sm-12 menu-main">
  <div class="logo col-sm-2">
    <%= link_to image_tag(Settings.logo, alt: t("logo")), root_path %>
  </div>
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>
  <div class="collapse navbar-collapse" id="menu">
    <ul class="nav navbar-nav navbar-right">
      <li class="active"><%= link_to t("home"), root_path %></li>
      <li><%= link_to t("book"), "#" %></li>
      <li><%= link_to t("author"), "#" %></li>
      <li><%= link_to t("publisher"), "#" %></li>
    </ul>
  </div>
</div>
